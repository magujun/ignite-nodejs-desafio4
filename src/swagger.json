{
	"openapi": "3.0.0",
	"info": {
		"title": "ignite-nodejs-desafio4 Documentation",
		"description": "This is an user registration API",
		"version": "1.0.0",
		"contact": {
			"email": "developer@example.com"
		}
	},
	"paths": {
		"/users": {
			"post": {
				"tags": ["User"],
				"summary": "Create a new user",
				"description": "This will create a new user",
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"name": {
										"type": "string"
									},
									"email": {
										"type": "string"
									}
								},
								"example": {
									"name": "User name",
									"email": "user@example.com"
								}
							}
						}
					}
				},
				"responses": {
					"201": {
						"description": "User created"
					},
					"400": {
						"description": "User already exists"
					}
				}
			},
			"get": {
				"tags": ["User"],
				"summary": "List all users",
				"description": "This will list all users",
				"responses": {
					"201": {
						"description": "Success",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": {
										"type": "object",
										"properties": {
											"user_id": {
												"type": "string"
											},
											"example": {
												"user_id": ""
											}
										}
									}
								}
							}
						}
					},
					"400": {
						"description": "User does not exist!"
					}
				}
			}
		},
		"/:user_id": {
			"get": {
				"tags": ["User"],
				"summary": "Show user profile",
				"description": "This will show an user's profile",
				"responses": {
					"200": {
						"description": "Success",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": {
										"type": "object",
										"properties": {
											"name": {
												"type": "string"
											},
											"email": {
												"type": "string"
											}
										}
									}
								}
							}
						}
					},
					"400": {
						"description": "User does not exist!"
					}
				}
			}
		},
		"/:user_id/admin": {
			"patch": {
				"tags": ["User"],
				"summary": "Turn user admin",
				"description": "This will turn the user admin",
				"responses": {
					"200": {
						"description": "Success",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": {
										"type": "object",
										"properties": {
											"name": {
												"type": "string"
											},
											"email": {
												"type": "string"
											}
										}
									}
								}
							}
						}
					},
					"400": {
						"description": "User does not exist!"
					}
				}
			}
		}
	}
}
